<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- .NET Tool Configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>mlvscan-dev</ToolCommandName>
    <PackageId>MLVScan.DevCLI</PackageId>
    <Version>1.0.1</Version>
    <Authors>Bars</Authors>
    <Description>Developer CLI tool for MLVScan - scan MelonLoader mods during development with remediation guidance</Description>
    <PackageTags>melonloader;security;malware;scanner;developer;cli</PackageTags>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/ifBars/MLVScan</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ifBars/MLVScan.DevCLI</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>

    <AssemblyName>MLVScan.DevCLI</AssemblyName>
    <RootNamespace>MLVScan</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MLVScan.Core" Version="*" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" Condition="Exists('README.md')" />
  </ItemGroup>

</Project>
